{
    "name": "letterpad",
    "version": "1.0.0",
    "description": ":) ",
    "main": "start.js",
    "private": true,
    "scripts": {
        "build": "cross-env NODE_ENV=production && babel api -d apiBuild && webpack --colors --display-error-details --config webpack/webpack.prod.js --env.theme=${theme}",
        "build:theme": "cross-env NODE_ENV=production webpack --colors --display-error-details --config webpack/webpack.theme.prod.js --env.theme=${theme}",
        "build:admin": "cross-env NODE_ENV=production webpack --colors --display-error-details --config webpack/webpack.admin.prod.js",
        "clean": "rm -rf data && rm -rf public/uploads",
        "seed": "node ./api/seed",
        "preinstall": "bash ./utils/preinstall.sh",
        "postinstall": "bash ./utils/postinstall.sh",
        "dev": "cross-env NODE_ENV=dev concurrently --kill-others \"nodemon -w api ./api/start.js\" \"node ./server.js --profile --json\" \"webpack --config webpack/webpack.dev.js --env.theme=${theme}\"",
        "prod": "cross-env NODE_ENV=production concurrently --kill-others \"node ./apiBuild/server.js\" \"node ./server.js\"",
        "prodPm2": "cross-env NODE_ENV=production concurrently --kill-others \"pm2 start ./apiBuild/server.js --name=lpDemoApi\" \"pm2 start ./server.js --name=lpDemo\"",
        "test": "jest --runInBand",
        "translate": "node ./utils/translation_tools",
        "precommit": "bash ./utils/precommit.sh"
    },
    "env": {
        "jest": true
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/ajaxtown/letterpad.git"
    },
    "author": "Abhishek Saha",
    "license": "MIT",
    "homepage": "http://ajaxtown.com",
    "workspaces": [
        "client/themes/*"
    ],
